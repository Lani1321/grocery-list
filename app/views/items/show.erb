
<h1>Hello <%=@user.username %>!</h1>

<h2>Here are all of the items on your list(s):</h2>
<br>
<div class="col-6">

<% @lists.each do |list|%>
  <% list.items.each do |item| %>
     <h4><span class="glyphicon glyphicon-ok-circle"> <a href="/items/<%= item.id %>/edit"></a></span><%= item.name %>  
     <a href="/items/<%= item.id %>/edit" class="btn btn-default btn-xs" role="button">Edit Item</a>
     <a href="/items/<%= item.id %>/delete" class="btn btn-default btn-xs" role="button">Delete Item</a>
    </h4> 
  <% end %>
<% end %>

